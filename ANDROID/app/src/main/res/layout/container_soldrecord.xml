<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">


    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/soldrecord_image"
        android:layout_width="81dp"
        android:layout_height="84dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view7"
        app:layout_constraintEnd_toStartOf="@+id/soldrecord_item_name"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/soldrecord_item_name"
        android:layout_width="92dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="84dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/soldrecord_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soldrecord_customer_name"
        android:layout_width="93dp"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/soldrecord_item_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/soldrecord_item_name"
        app:layout_constraintTop_toBottomOf="@+id/soldrecord_item_name" />

    <TextView
        android:id="@+id/soldrecord_date"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soldrecord_total_amount"
        android:layout_width="94dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/soldrecord_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/soldrecord_date"
        app:layout_constraintTop_toBottomOf="@+id/soldrecord_date" />

    <TextView
        android:id="@+id/sold_Balancerecord"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="@+id/soldrecord_customer_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/soldrecord_customer_name"
        app:layout_constraintTop_toBottomOf="@+id/soldrecord_customer_name"
        app:layout_constraintVertical_bias="0.478" />

    <TextView
        android:id="@+id/soldrecord_profit"
        android:layout_width="93dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="@+id/soldrecord_total_amount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/soldrecord_total_amount"
        app:layout_constraintTop_toBottomOf="@+id/soldrecord_total_amount"
        app:layout_constraintVertical_bias="0.076" />

</androidx.constraintlayout.widget.ConstraintLayout>
